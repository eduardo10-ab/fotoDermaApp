{
  "version": 2,
  "name": "fotoderma-backend",
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/backend/server.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}